<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.cleveroad.sy.cyclemenuwidget.CycleMenuWidget
            android:id="@+id/itemCycleMenuWidget"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:cm_autoMaxRadius="220dp"
            app:cm_autoMinRadius="75dp"
            app:cm_collapsed_radius="25dp"
            app:cm_corner="right_bottom"
            app:cm_corner_image_src="@drawable/ic_local_pizza_black_24dp"
            app:cm_fixedRadius="200dp"
            app:cm_radius_scale_type="fixed"
            app:cm_ripple_color="#009933"
            app:cm_scroll_type="endless" android:layout_alignParentEnd="true"/>

</RelativeLayout>